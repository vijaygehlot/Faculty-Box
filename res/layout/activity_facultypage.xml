<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pro.mindgrove.facultypage"
    android:background="#8cffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="1">

        <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Account Login"
            android:id="@+id/acclogin"
            android:layout_weight="0.49"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#218383" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="    faculty Register"
            android:id="@+id/textView17"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#0d2a94" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:background="@drawable/faculty_btn"
            android:layout_gravity="center"
            android:ems="10"
            android:id="@+id/id_name" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:background="@drawable/faculty_btn"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:ems="10"
            android:id="@+id/id_email"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:background="@drawable/faculty_btn"
            android:layout_gravity="center"
            android:inputType="number"
            android:hint="Age"
            android:ems="10"
            android:id="@+id/id_age" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:hint="phone/mobile"
            android:layout_gravity="center"
            android:background="@drawable/faculty_btn"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/id_number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:hint="pan Card"
            android:background="@drawable/faculty_btn"
            android:id="@+id/id_pan" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/id_stream"
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="   Stream"
            android:background="@drawable/faculty_btn" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/id_subject"
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="   Subject"
            android:background="@drawable/faculty_btn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:weightSum="1">

        <EditText
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:background="@drawable/faculty_btn"
            android:layout_gravity="center"
            android:hint="password"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/id_pass" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:orientation="vertical"
        android:layout_height="28dp"
        android:weightSum="1">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:textSize="17dp"
            android:text="Term &amp; Conditions" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/facebookbt"
            android:textAllCaps="false"
            android:text="Register"
            android:id="@+id/btn_reg"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

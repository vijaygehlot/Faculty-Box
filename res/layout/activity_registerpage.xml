<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.pro.mindgrove.registerpage"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
         </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/profile"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="faculty Box"
            android:id="@+id/textView6"
            android:textSize="65dp"
            android:textColor="#0c7c8e"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Create Account"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:typeface="monospace"
            android:textColor="#52b695" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:weightSum="1">

        <EditText
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_login_form"
            android:ems="10"
            android:hint="User Name"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#FF0C95B7"
            android:textColor="#FF0C95B7"
            android:textColorHighlight="#FF0C95B7"
            android:textColorLink="#FF0C95B7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:weightSum="1">
        <EditText
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:background="@drawable/edittext_login_form"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/editText1"
            android:textColor="#FF0C95B7"
            android:textColorHint="#FF0C95B7"
            android:textColorHighlight="#FF0C95B7"
            android:textColorLink="#FF0C95B7" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:weightSum="1">
        <EditText
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:hint="password"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/edittext_login_form"
            android:textColorHighlight="#FF0C95B7"
            android:textColorLink="#FF0C95B7"
            android:textIsSelectable="false"
            android:textColorHint="#FF0C95B7"
            android:textColor="#FF0C95B7"
            android:id="@+id/editText2" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="1">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term &amp; Conditions"
            android:gravity="center"
            android:id="@+id/checkBox"
            android:checked="false"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="1">
        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Sign up"
            android:id="@+id/signup"
            android:textAllCaps="false"
            android:background="@drawable/facebookbt"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>

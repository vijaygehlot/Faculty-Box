<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pro.mindgrove.signinpage"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="1">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/profile"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Box"
            android:layout_gravity="center"
            android:id="@+id/textView14"
            android:textSize="65dp"
            android:textColor="#0c7c8e" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Account Sign in"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:textColor="#52b695"
            android:textSize="30dp"
            android:typeface="serif"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="1">
        <EditText
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textColorHint="@color/colorAccent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="#FF0C95B7"
            android:textColorHighlight="#FF0C95B7"
            android:textColorLink="#FF0C95B7"
            android:background="@drawable/edittext_login_form"
            android:hint="Enter E-mail"
            android:id="@+id/editText_email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="1">
        <EditText
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textColorHint="@color/colorAccent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:inputType="textPassword"
            android:textColor="#FF0C95B7"
            android:textColorHighlight="#FF0C95B7"
            android:textColorLink="#FF0C95B7"
            android:background="@drawable/edittext_login_form"
            android:hint="Password"
            android:id="@+id/editText_password"
            android:layout_below="@+id/editText_email"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="9.25"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/facebookbt"
            android:text="Sign in"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:id="@+id/btn_login"
            android:layout_below="@+id/editText_password"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>

